{
  "name": "pita",
  "version": "0.2.4",
  "private": true,
  "description": "Slack-compatible copy converter for Notion and Google Docs",
  "homepage": "https://github.com/ktym4a/pita#readme",
  "bugs": {
    "url": "https://github.com/ktym4a/pita/issues"
  },
  "license": "MIT",
  "author": "ktym4a",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktym4a/pita.git"
  },
  "type": "module",
  "scripts": {
    "build": "wxt build",
    "changeset": "changeset",
    "check": "pnpm lint && pnpm fmt",
    "check:fix": "pnpm lint:fix && pnpm fmt:fix",
    "dev": "wxt",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --type-aware --type-check .",
    "lint:fix": "oxlint --type-aware --type-check --fix .",
    "postinstall": "wxt prepare",
    "release": "git tag pita@$(node -p \"require('./package.json').version\")",
    "test": "vitest",
    "test:run": "vitest run",
    "version": "changeset version",
    "zip": "wxt zip"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^27.4.0",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "vitest": "^4.0.18",
    "wxt": "^0.20.13"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  }
}
